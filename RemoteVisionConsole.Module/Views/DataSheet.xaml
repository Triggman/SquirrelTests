<UserControl
    x:Class="RemoteVisionConsole.Module.Views.DataSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RemoteVisionConsole.Module.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:bunny="http://afterbunny/2020/ui/wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Background="{bunny:ThemeResource ResourceKey=ContentBackground}">
        <VirtualizingStackPanel
            x:Name="stackPanel"
            Grid.IsSharedSizeScope="True"
            Orientation="Vertical" />
    </ScrollViewer>

</UserControl>
